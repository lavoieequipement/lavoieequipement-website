<section class="content_page content_formulaire">
    <div class="grid-container">

        <div class="card_formulaire">

        <h2>Demande d'ajustement d'équipement</h2>

        <%= form_tag(ajustement_equipement_send_path, method: "post") do %>

            <%= label_tag(:name, "Votre nom") %>
            <%= text_field_tag :name, nil, {placeholder: "Votre nom", required: true} %>

            <div class="grid-x grid-margin-x">
                <div class="cell large-6">
                    <%= label_tag(:email, "Votre courriel") %>
                    <%= email_field_tag :email, nil, {placeholder: "Votre adresse courriel", required: true} %>
                </div>
                <div class="cell large-6">
                    <%= label_tag(:phone, "Votre téléphone") %>
                    <%= telephone_field_tag :phone, nil, {placeholder: "Votre téléphone", required: true} %>
                </div>
            </div>

            <div class="grid-x grid-margin-x">
                <div class="cell large-6">
                    <%= label_tag(:forfait_ajustement, "Type d'ajustement") %>
                    <%=
                        select_tag(:forfait_ajustement, options_for_select([
                            ['Ajustement Premium'],
                            ['Ajustement Haute-Performance'],
                          ]), :include_blank => '-- Choix du forfait --', required: true)
                    %>
                </div>
                <div class="cell large-6">
                    <%= label_tag(:type_equipement, "Type d'équipement") %>

                        <%=
                            select_tag(:type_equipement, options_for_select(
                            EquipmentType.all.collect {|p| [ p.name, p.name ]}
                            ), :include_blank => "-- Type d'équipement --", required: true)
                        %>

                </div>
            </div>

            <%= label_tag(:message, "Demandes particulières/précisions") %>
            <%= text_area_tag :message,nil, {placeholder: "Votre message",rows: 5, cols: 25, required: true} %>
            <br>

            <div class="grid-x flex_center">
                <div class="cell large-4">
                    <%= submit_tag "Envoyer votre message", class:"button large"%>
                </div>
                <div class="cell large-8">

                        <%= check_box(:tos, :accepted, { :class => 'tos_check', required: true }, "yes", "no") %> &nbsp; J'accepte les conditions ainsi que les frais éventuels rattachés à la demande.
                    <p>
                        <quote>
                            En cliquant sur j'accepte, vous autorisez l'entreprise LAVOIE Equipement Agricole
                            à enregister dans sa base de données les informations envoyées par ce formulaire et
                            à communiquer avec vous par la suite pour traiter votre demande.
                        </quote>
                    </p>
                </div>
            </div>
        </div>

        <% end %>
    </div>

</section>
