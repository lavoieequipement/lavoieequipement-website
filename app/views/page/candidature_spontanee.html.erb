<section class="intro_page">
    <div class="grid-container">
        <div class="grid-x">
            <div class="cell">
                <h1>Candidature spontanée</h1>
            </div>
        </div>
    </div>
</section>
<div class="cap_white">
<section class="content_page content_formulaire">
    <div class="grid-container">
        <div class="grid-x">
            <div class="cell">
                <div class="card_formulaire">

                <h3>Proposer votre candidature</h3>

                <%= form_tag(candidature_spontanee_send_path, method: "post",multipart: true) do %>

                    <%= label_tag(:name, "Votre nom") %>
                    <%= text_field_tag :name, nil, {placeholder: "Votre nom", required: true} %>

                    <%= label_tag(:email, "Votre courriel") %>
                    <%= email_field_tag :email, nil, {placeholder: "Votre adresse courriel", required: true} %>

                    <%= label_tag(:message, "Votre message") %>
                    <%= text_area_tag :message,nil, {placeholder: "Votre message",rows: 10, cols: 25, required: true} %>

                    <%= label_tag(:cv, "Curriculum Vitae") %>
                    <%= file_field_tag 'cv_candidature', required: true%>

                    <%= label_tag(:cv, "Lettre de présentation") %>
                    <%= file_field_tag 'lettre_candidature', required: true %>

                    <%= submit_tag "Envoyer votre message", class:"button large"%>

                <% end %>

                <br>
                <p>
                    <small>Seules les candidatures retenues seront recontactées pour passer un entretien</small>
                </p>

            </div>
            </div>
        </div>
    </div>
</section>
