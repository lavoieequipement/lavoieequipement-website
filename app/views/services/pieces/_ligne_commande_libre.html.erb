<div id="line" class="nested-fields">
    <div class="grid-x grid-margin-x">
        <div class="cell  small-12 medium-12 large-3">
            <label for="liste_marques">Marque</label>

            <%= f.select(:marque, { prompt: "Choisir une marque" }, { required: true }) do %>
                <% @marques.each do |marque,website| %>
                    <option value="<%= marque %>"><%= marque %></option>
                <% end %>
            <% end %>

        </div>
        <div class="cell small-6  large-3">
        <%= label_tag(:reference, "Numéro de pièce") %>
        <%= f.text_field :reference, placeholder: "Numéro de pièce", required: true %>
        </div>
        <div class="cell small-6 large-3">
            <%= label_tag(:quantite, "Quantité") %>
            <%= f.number_field :quantite, placeholder: "Quantité", required: true %>
        </div>
        <div class="cell small-12 large-3">

            <div class="show-for-large">
                <strong><%=  link_to_remove_association "X Supprimer la ligne", f,class:"button remove_ligne_commande_libre" %></strong>
            </div>
            <div class='show-for-small hide-for-large'>
                <strong><%=  link_to_remove_association " Supprimer la ligne", f %></strong>
            </div>
        </div>
    </div>
    <hr>
</div>
